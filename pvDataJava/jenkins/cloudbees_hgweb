###########################################
# Fetch complete repo

rm -fr hgweb
hg clone -U http://hg.code.sf.net/p/epics-pvdata/pvDataJava hgweb

###########################################
# Sync into SF webspace

rsync -aqP --delete --exclude=\.hg/hgrc -e ssh hgweb/.hg epics-jenkins@web.sourceforge.net:/home/project-web/epics-pvdata/repos/pvDataJava
