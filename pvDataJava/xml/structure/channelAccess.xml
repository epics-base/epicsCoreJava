<?xml version="1.0" ?>
<database>

<structure structureName = "value">
    <scalar name = "fieldList" scalarType = "string">
       value
    </scalar>
</structure>

<structure structureName = "valueAlarm">
    <scalar name = "fieldList" scalarType = "string">
       value,alarm
    </scalar>
</structure>

<structure structureName = "valueAlarmTimeStamp">
    <scalar name = "fieldList" scalarType = "string">
       value,alarm,timeStamp
    </scalar>
</structure>

<structure structureName = "monitorBase">
    <scalar name = "algorithm" scalarType = "string" />
    <scalar name = "queueSize" scalarType = "byte" >1</scalar>
</structure>

<structure structureName = "monitorPut" extends = "monitorBase" >
    <scalar name = "algorithm">onPut</scalar>
</structure>

<structure structureName = "monitorChange" extends = "monitorBase" >
    <scalar name = "algorithm">onChange</scalar>
</structure>

<structure structureName = "monitorAbsoluteChange" extends = "monitorBase" >
    <scalar name = "algorithm">onAbsoluteChange</scalar>
    <scalar name = "deadband" scalarType = "double" />
</structure>

<structure structureName = "monitorPercentChange" extends = "monitorBase" >
    <scalar name = "algorithm">onPercentChange</scalar>
    <scalar name = "deadband" scalarType = "double" />
</structure>

</database>

