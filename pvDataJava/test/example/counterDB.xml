<?xml version="1.0" ?>
<database>
<record name = "valueOnly">
    <scalar name = "value" type = "double" />
</record>

<record name = "simpleCounter" >
    <structure name = "alarm" type = "alarm" />
    <structure name = "timeStamp" type = "timeStamp" />
    <scalar name = "value" type = "int" />
    <structure name = "input" type = "calculation" >
      <structure name = "calculator">
        <scalar name ="expression">(value+1)&lt;=10 ? value+1 : 0</scalar>
      </structure>
    </structure>
    <structure name = "valueAlarm" type = "intAlarm">
          <scalar name = "active">true</scalar>
          <structure name = "interval">
              <structure name = "0" type = "intAlarmInterval">
                  <scalar name = "value">2</scalar>
                  <structure name = "severity"><scalar name = "choice">major</scalar></structure>
                  <scalar name = "message">LOWLOW</scalar>
              </structure>
              <structure name = "1" type = "intAlarmInterval">
                  <scalar name = "value">4</scalar>
                  <structure name = "severity"><scalar name = "choice">major</scalar></structure>
                  <scalar name = "message">LOW</scalar>
              </structure>
              <structure name = "2" type = "intAlarmInterval">
                  <scalar name = "value">6</scalar>
                  <structure name = "severity"><scalar name = "choice">major</scalar></structure>
                  <scalar name = "message">none</scalar>
              </structure>
              <structure name = "3" type = "intAlarmInterval">
                  <scalar name = "value">8</scalar>
                  <structure name = "severity"><scalar name = "choice">major</scalar></structure>
                  <scalar name = "message">HIGH</scalar>
              </structure>
              <structure name = "4" type = "intAlarmInterval">
                  <scalar name = "value">10</scalar>
                  <structure name = "severity"><scalar name = "choice">major</scalar></structure>
                  <scalar name = "message">HIGHHIGH</scalar>
              </structure>
          </structure>
          <structure name ="outOfRange"><scalar name = "choice">invalid</scalar></structure>
    </structure> 
</record>

<record name = "counter">
    <structure name = "scan" type = "scan">
        <structure name = "type"><scalar name = "choice">periodic</scalar></structure>
        <scalar name = "rate">1.0</scalar>
    </structure>
    <structure name = "alarm" type = "alarm" />
    <structure name = "timeStamp" type = "timeStamp" />
    <scalar name = "value" type = "double" />
    <structure name = "input" type = "calculation" >
       <structure name = "calcArgs">
          <structure name = "min">
            <scalar name = "value" type = "double" >0.0</scalar>
          </structure>
          <structure name = "max">
            <scalar name = "value" type = "double" >10.0</scalar>
          </structure>
          <structure name = "inc">
            <scalar name = "value" type = "double" >0.5</scalar>
          </structure>
       </structure>
       <structure name = "calculator">
         <scalar name = "expression">(value+inc)&lt;=max ? value+inc : min</scalar>
       </structure>
    </structure>
    <structure name = "supportSequence" type = "generic" >
        <structure name = "0" type = "supportSequenceElement">
            <scalar name = "wait">false</scalar>
            <structure name = "link" type = "outputSupport">
                <scalar name = "pvname">counterOutput</scalar>
                <scalar name = "process">true</scalar>
            </structure>
        </structure>
        <structure name = "1" type = "supportSequenceElement">
            <scalar name = "wait">true</scalar>
            <structure name = "link" type = "processSupport">
                <scalar name = "pvname">counterInput</scalar>
            </structure>
        </structure>
    </structure>
</record>

<record name = "counterOutput" >
    <structure name = "alarm" type = "alarm" />
    <structure name = "timeStamp" type = "timeStamp" />
    <scalar name = "value" type = "double" />
    <structure name = "valueAlarm" type = "doubleAlarm">
          <scalar name = "active">true</scalar>
          <structure name = "interval">
              <structure name = "0" type = "doubleAlarmInterval">
                  <scalar name = "value">2</scalar>
                  <structure name = "severity"><scalar name = "choice">major</scalar></structure>
                  <scalar name = "message">LOWLOW</scalar>
              </structure>
              <structure name = "1" type = "doubleAlarmInterval">
                  <scalar name = "value">4</scalar>
                  <structure name = "severity"><scalar name = "choice">major</scalar></structure>
                  <scalar name = "message">LOW</scalar>
              </structure>
              <structure name = "2" type = "doubleAlarmInterval">
                  <scalar name = "value">6</scalar>
                  <structure name = "severity"><scalar name = "choice">major</scalar></structure>
                  <scalar name = "message">none</scalar>
              </structure>
              <structure name = "3" type = "doubleAlarmInterval">
                  <scalar name = "value">8</scalar>
                  <structure name = "severity"><scalar name = "choice">major</scalar></structure>
                  <scalar name = "message">HIGH</scalar>
              </structure>
              <structure name = "4" type = "doubleAlarmInterval">
                  <scalar name = "value">10</scalar>
                  <structure name = "severity"><scalar name = "choice">major</scalar></structure>
                  <scalar name = "message">HIGHHIGH</scalar>
              </structure>
          </structure>
          <structure name ="outOfRange"><scalar name = "choice">invalid</scalar></structure>
    </structure> 
    
    <structure name = "display" type = "display" >
        <scalar name = "description">Sample Description</scalar>
        <scalar name = "format">%f</scalar>
        <scalar name = "resolution">1</scalar>
        <scalar name = "units">volts</scalar>
        <structure name = "limit">
            <scalar name = "low">0.0</scalar>
            <scalar name = "high">10.0</scalar>
        </structure>
    </structure>
    <structure name = "control" type = "control" >
        <structure name = "limit">
            <scalar name = "low">0.0</scalar>
            <scalar name = "high">10.0</scalar>
        </structure>
        <scalar name = "minStep">.1</scalar>
    </structure>
</record>

<record name = "counterInput">
    <structure name = "alarm" type = "alarm" />
    <structure name = "timeStamp" type = "timeStamp" />
    <scalar name = "value" type = "double" />
    <structure name = "display" type = "display" />
    <structure name = "input" type = "inputSupport">
        <scalar name = "pvname">counterOutput</scalar>
        <scalar name = "process">false</scalar>
        <scalar name = "propertyNames">alarm,display</scalar>
    </structure>
</record>

<record name = "counterMonitor">
    <structure name = "alarm" type = "alarm" />
    <structure name = "timeStamp" type = "timeStamp" />
    <scalar name = "value" type = "double" />
    <structure name = "display" type = "display" />
    <structure name = "input" type = "monitorSupport">
        <scalar name = "pvname">counterOutput</scalar>
        <scalar name = "process">true</scalar>
        <scalar name = "propertyNames">alarm,display</scalar>
    </structure>
</record>

<record name = "counterDouble">
    <structure name = "alarm" type = "alarm" />
    <structure name = "timeStamp" type = "timeStamp" />
    <scalar name = "value" type = "double" />
    <structure name = "input" type = "calculation" >
        <structure name = "calcArgs">
            <structure name = "arg0" type = "generic">
                <scalar name = "value" type = "double" >0.0</scalar>
                <structure name = "alarm" type = "alarm"/>
                <structure name = "input" type = "monitorSupport">
                    <scalar name = "pvname">counterOutput"</scalar>
                    <scalar name = "process">true</scalar>
                    <scalar name = "propertyNames">alarm</scalar>
                </structure>
            </structure>
            <structure name = "arg1" type = "generic">
                <scalar name = "value" type = "double" >0.0</scalar>
                <structure name = "alarm" type = "alarm"/>
                <structure name = "input" type = "inputSupport">
                    <scalar name = "pvname">counterOutput"</scalar>
                    <scalar name = "propertyNames">alarm</scalar>
                </structure>
            </structure>
        </structure>
        <structure name = "calculator">
           <scalar name = "expression">arg0+arg1</scalar>
        </structure>
    </structure>
</record>

<!--
-->
</database>
