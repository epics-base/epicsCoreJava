<?xml version = "1.0" ?>
<database>
<structure name = "scanFactory">
  <scalar name = "supportFactory" type = "string">
     org.epics.ioc.support.basic.ScanFactory</scalar>
</structure>

<structure name = "scanPriority" >
  <auxInfo name = "pvFactory" type = "string">enumeratedFactory</auxInfo>
  <scalar name = "index" type = "int"/>
  <scalar name = "choice" type = "string">low</scalar>
  <array name = "choices" type = "string">
      lowest,lower,low,middle,high,higher,highest</array>
</structure>

<structure name = "scanType">
  <auxInfo name = "pvFactory" type = "string">enumeratedFactory</auxInfo>
  <scalar name = "index"  type = "int"/>
  <scalar name = "choice" type = "string"/>
  <array name = "choices" type = "string">passive,event,periodic</array>
</structure>

<structure name = "scan" supportName = "scan">
  <structure name = "priority" type = "scanPriority" />
  <structure name = "type" type = "scanType" />
  <scalar name = "rate" type = "double"  default = "1.0" />
  <scalar name = "eventName" type = "string" />
  <scalar name = "processSelf" type = "boolean" />
  <scalar name = "processAfterStart" type = "boolean">false</scalar>
  <scalar name = "maxConsecutiveActive" type = "int">1</scalar>
</structure>

</database>
